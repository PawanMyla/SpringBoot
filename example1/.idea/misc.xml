package com.exercise1;

public final class CurrentAccount extends Account {
    private static final double  MIN_BALANCE = 1000;

    public CurrentAccount(int accountNumber,String name,double amount){
        super(accountNumber,name,amount);
    }

    @Override
    public void deposit(double amount){
        this.amount += amount;
        System.out.println(amount + "deposited in current Account");
    }
    @Override
    public void withdraw(double amount){
        if(this.amount - amount < MIN_BALANCE){
            System.out.println("Cannot withdraw. Minimum should be" + MIN_BALANCE);
        }else{
            this.amount -= amount;
            System.out.println(amount +"Withdraw from Current Account");
        }
    }
}
